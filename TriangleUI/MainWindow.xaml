<Window x:Class="TriangleUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriangleUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="MainCanvas" MouseLeftButtonUp="Canvas_MouseDown" Background="White">
        </Canvas>
        <Button HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Height="35" 
                Content="Склеить треугольники"
                Width="300" 
                Margin="0 0 0 5" Click="Button_Click" />
    </Grid>
</Window>
